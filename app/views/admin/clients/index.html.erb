<div>
  <h3>Create an organization:</h3>

  <%= form_tag(admin_clients_add_organization_path, :method => :post) do %>
  <table>
    <tr><td>Organization Name:</td> <td><%= text_field :organization, :name %></td></tr>
    <tr><td colspan=2><%= submit_tag "Add new organization" %></td></tr>
  </table>
  <% end %>
</div>

<hr>
  <h3>Existing organizations:</h3>
<table>
  <thead>
    <tr>
      <th>Date Created</th>
      <th>Organization Name</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <% @organizations.each do |org| %>
  <tr>
    <td><%= org.created_at %></td>
    <td><%= link_to "#{org.name || "Unnamed"} - (#{org.users.size})", admin_clients_view_organization_path(org) %></td>
    <td> -------- <%= link_to "Delete", admin_clients_delete_organization_path(org), :method => :delete, :confirm => "Are you sure you want to delete '#{org.name}' and all of its users?" %></td>
  </tr>
  <% end %>
</table>
