<% if flash[:errors] %>
    <ul>
    <% flash[:errors].messages.each do |k, v| %>
      <li><%= k.to_s.humanize %> <%= v.to_sentence %></li>
     <% end %>
    </ul>
<% end %>

<script>
$(function() {
  $( "#sign_up_form" ).dialog({
    height: 250,
    modal: true
  });
});
</script>

<div id="sign_up_form" title="Create trial account">
  <%= form_for(@user, :url => trial_register_new_user_path) do |f| %>
    <%= f.label :email %><br />
    <%= f.text_field :email, :value => @user.email %>
    <br />
    <%= f.label :password %><br />
    <%= f.password_field :password %>
    <br />
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Create Account" %>
  <% end %>
</div>
