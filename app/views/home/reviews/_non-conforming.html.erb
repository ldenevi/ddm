<div class="panel panel-non-conformance">
  <table>
    <tr>
      <th>Non-Conforming Reviews</th>
      <th>Task</th>
    </tr>
    
    <% @non_conforming_tasks.each do |task| %>
    <tr>
      <td><%= link_to task.review.name, show_review_path(task.review_id) %></td>
      <td><%= link_to task.name, task_show_path(task.id) %></td>
    </tr>
    <% end %>
    
    
  </table>
  
  <div>
    <!--p>Completed and in conformance</p>
    <p>Not completed but all tasks in conformance</p>
    <p>At least one review item in non-conformance</p-->
  </div>
</div>
