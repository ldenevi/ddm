<div class="panel panel-past-due">
  <table class="task_list">
    <thead>
      <tr>
        <th>Late Reviews</th>
        <th>Past Due Task</th>
        <th>Days Late</th>
      </tr>
    </thead>
    
    <tbody>
    <% @past_due_tasks.each do |task|%>
    <tr data-task-id="<%= task.id %>">
      <td><%= link_to task.review.name, list_tasks_path(task.review_id) %></td>
      <td class="task_link"><%= link_to task.name, task_show_path(task.id) %></td>
      <td><%= time_ago_in_words(task.expected_completion_at) %></td>
    </tr>
    <% end %>
    </tbody>
    
  </table>
  
  <div></div>
</div>
